<div id="new-comment">
  <h3>Add comment</h3>
  <% form_for article.comments.build do |f| %>
    <%= f.hidden_field :article_id %>
    <%= f.text_field :name %>  
    <%= f.text_area :body, :label => 'Comments', :rows => 6, :style => 'width: 100%' %>
    <% f.actions do %>
      <%= submit_tag 'Submit comment' %>
    <% end %>
  <% end %>
</div>